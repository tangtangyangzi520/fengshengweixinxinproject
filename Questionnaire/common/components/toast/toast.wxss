/* common/components/toast.wxss */

.fs-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  padding: 20rpx 40rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  min-width: 200rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
}
