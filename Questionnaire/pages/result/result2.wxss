/* pages/result/result2.wxss */

.container {
  position: relative;
  flex-direction: column;
  align-items: center;
}

.inner {
  position: absolute;
  width: 100%;
  height: auto;
  top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  overflow-x: hidden;
}

.inner_bg {
  width: 713rpx;
  height: 1032rpx;
  position: absolute;
  z-index: -1;
  margin-left: 25rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: white;
  letter-spacing: 5rpx;
  margin-top: 50rpx;
}

.avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 300rpx;
  border: 10rpx solid black;
  margin-top: 100rpx;
}

.desc {
  font-size: 25rpx;
  color: black;
  letter-spacing: 5rpx;
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
}

.result {
  font-size: 80rpx;
  font-weight: bold;
  margin-top: 30rpx;
  color: black;
  letter-spacing: 20rpx;
}

.result_desc {
  font-size: 25rpx;
  font-weight: bold;
  color: white;
  letter-spacing: 5rpx;
  margin-top: 50rpx;
  width: 72%;
}

.btn_layout {
  display: flex;
  margin-top: 25rpx;
}

.btn {
  width: 332rpx;
  height: 122rpx;
}

.back_home {
  margin-bottom: 24rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-weight: bold;
  letter-spacing: 5rpx;
  width: 100%;
  text-align: center;
}
