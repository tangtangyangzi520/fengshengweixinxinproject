/**index.wxss**/

.tizhicheng {
  position: relative;
  width: 594rpx;
  height: 617rpx;
  margin: auto;
  top: 10rpx;
}

.tizhicheng image {
  width: 100%;
  height: 100%;
}

.state-close, .state-open {
  position: absolute;
  width: 184rpx;
  height: 184rpx;
  top: 50%;
  left: 50%;
  margin-top: -20rpx;
  transform: translate(-50%, -50%);
  z-index: 11;
}

.title {
  position: relative;
  width: 600rpx;
  font-size: 40rpx;
  color: #23a492;
  text-align: center;
  margin: auto;
  line-height: 60rpx;
}

.tips {
  position: relative;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #9b9b9b;
  line-height: 60rpx;
}

.circle {
  position: absolute;
  width: 182rpx;
  height: 182rpx;
  background: rgba(27, 206, 180, 0.5);
  border-radius: 50%;
  top: 50%;
  left: 50%;
  margin-left: -90rpx;
  margin-top: -111rpx;
}
