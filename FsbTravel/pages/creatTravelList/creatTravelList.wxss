@import "../choice-categary-template/choice-categary-template.wxss";

.container {
    display: flex;
    flex-direction: column;
}

.top-view {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    z-index: 110;
}

.top-view button {
	padding-left: 0;
	padding-right: 0;
	margin-left: 0;
	margin-right: 0; 
}

.top-view button[plain] {
	color: unset;
	border: unset;
}

.top-view-left-img {
    width: 88rpx;
    height: 88rpx;
    margin-left: 10rpx;
}

.top-view-right-img {
    width: 88rpx;
    height: 88rpx;
    margin-right: 10rpx;
    margin-left: auto;
}

.top-view-title {
    text-align: center;
    line-height: 88rpx;
    width: 100%;
    position: fixed;
    background: #ffc256;
    color: #fff;
    z-index: 100;
}

.container-categary-back {
    background-color: #fff;
    border-radius: 10rpx;
    margin: 88rpx 20rpx 130rpx 20rpx;
    padding-top: 25px;
}

.container-back {
    margin: 88rpx 20rpx 130rpx 20rpx;
}

.section-back {
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.section-title {
    width: 710rpx;
    text-align: center;
    font-size: 36rpx;
    color: #333;
    line-height: 100rpx;
}

.cell {
    display: flex;
    flex-direction: row;
    height: 88rpx;
    border-bottom: 1rpx solid #ddd;
     justify-content: space-between; 
    margin-left: 20rpx;
    margin-right: 20rpx;
    align-items: center;
}


.cell-title {
    margin-left: 10rpx;
    font-size: 30rpx;
    color: #333;
}

.cell-right-back{
    display: flex;
    flex-direction: row;
     align-items: center;
     margin-right:  - 20rpx;
}

.cell-buy-btn{
    background-color: #FF8F4F;
    color: #fff;
    font-size: 26rpx;
    height:  60rpx;
    width: 120rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 30rpx;
    margin-right: 20rpx;
}


.cell-icon {
    width: 88rpx;
    height: 88rpx;
}

.add-cell {
    display: flex;
    flex-direction: row;
    height: 88rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    align-items: center;
}

.add-cell-image{
    width: 44rpx;
    height: 44rpx;
    margin-left: 10rpx;
}

.add-cell-input{
    margin-left: 10rpx;
    color: #333;
    font-size: 30rpx;
    width: 80%;
}

.add-cell-input-placeholder{
    color: #999;
    font-size: 30rpx;
}